---
layout: _base
---
<main class="flex flex-col items-center w-3/4 m-auto">
	{%- for each in collections.news %}
	<div class="flex flex-col items-center">
		<a href="/news/{{each.data.title|slug}}">
			<h3 class="text-3xl">{{each.data.title}}</h3>
		</a>
		<div>
			<span>{{each.data.date}} - </span><a href="/news?author={{each.data.author}}">{{each.data.author}}</a>
		</div>
	</div>
	{%- endfor %}
</main>
